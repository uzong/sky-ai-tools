---
import type { CollectionEntry } from 'astro:content';

interface Props {
	tool: CollectionEntry<'tools'>;
}

const { tool } = Astro.props;
const { data, slug } = tool;
---

<a href={`/tools/${slug}/`} class="tool-card card">
	<div class="card-header">
		<div class="logo-container">
			<img src={data.logo} alt={data.name} class="tool-logo" />
		</div>
		<div class="title-wrap">
			<h3 class="tool-title">{data.name}</h3>
			<div class="category-badges">
				{data.category.map(cat => <span class="mini-badge">{cat}</span>)}
			</div>
		</div>
	</div>
	<p class="tool-desc">{data.description}</p>
	<div class="card-bottom">
		<div class="features">
			{data.highlights.slice(0, 2).map(h => <span>✦ {h.slice(0, 15)}...</span>)}
		</div>
		<div class="status">
			{data.is_hot && <span class="badge-dot hot">热门</span>}
			{data.is_new && <span class="badge-dot new">新品</span>}
		</div>
	</div>
</a>

<style>
	.tool-card {
		padding: 1.5rem;
		text-decoration: none;
		color: white;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.card-header {
		display: flex;
		gap: 1rem;
		margin-bottom: 1.25rem;
		align-items: center;
	}

	.logo-container {
		width: 56px;
		height: 56px;
		border-radius: 14px;
		background: rgba(255,255,255,0.05);
		border: 1px solid rgba(255,255,255,0.1);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 10px;
	}

	.tool-logo {
		max-width: 100%;
		max-height: 100%;
		object-fit: contain;
	}

	.tool-title {
		font-size: 1.15rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.mini-badge {
		font-size: 0.7rem;
		color: var(--primary);
		background: rgba(99,102,241,0.1);
		padding: 2px 8px;
		border-radius: 4px;
		font-weight: 600;
	}

	.tool-desc {
		font-size: 0.9rem;
		color: var(--text-muted);
		margin-bottom: 1.5rem;
		line-height: 1.5;
		flex: 1;
	}

	.card-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 1rem;
		border-top: 1px solid var(--border);
	}

	.features {
		font-size: 0.75rem;
		color: var(--text-muted);
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.badge-dot {
		font-size: 0.7rem;
		font-weight: 700;
		padding: 2px 8px;
		border-radius: 6px;
	}

	.badge-dot.hot { background: rgba(244, 63, 94, 0.1); color: #f43f5e; border: 1px solid rgba(244, 63, 94, 0.2); }
	.badge-dot.new { background: rgba(16, 185, 129, 0.1); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2); }
</style>
